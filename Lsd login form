  <script>
  function keydownFunction() {
document.getElementById("fname").style.backgroundColor = "yellow";
}
    
  function keyupFunction() {  document.getElementById("fname").style.backgroundColor = "pink";
  }
  
  </script>
  
<button onclick="stopColor()">Stop</button>
<script>
var myVar = setInterval(setColor, 300);
 
function setColor() {
  var x = document.body;
  x.style.backgroundColor = x.style.backgroundColor == "yellow" ? "pink" : "yellow";
}
 
function stopColor() {
  clearInterval(myVar);
}
</script>

